@model List<EventCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<a asp-controller="EventCategory" asp-action="Create" class="btn btn-primary">Add Category</a>

@if(Model.Count() == 0)
            {
                <p class="text-primary">No category added yet</p>
            }

<br />


@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>

                    <td>
                        <a href="#"> Edit
                         </a>
                        <a href="#">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}





